<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ebf2f0"
    android:layout_height="match_parent"
    tools:context=".Welcome">
    <soup.neumorphism.NeumorphCardView
        android:id="@+id/edittext_card"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="match_parent"
        app:neumorph_shadowElevation="@dimen/_1sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="48dp"
        >
        <ImageView
            android:layout_marginTop="@dimen/_60sdp"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_190sdp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/onlinevoting"
            android:layout_margin="@dimen/_20sdp"
            />
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphButton
        android:layout_marginTop="@dimen/_40sdp"
        style="@style/Widget.Neumorph.Button"
        android:id="@+id/btnCreateAccountWelcome"
        android:layout_width="match_parent"
        android:fontFamily="@font/roboto_bold"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
          app:neumorph_shadowElevation="@dimen/_5sdp"
        android:background="@color/white"
        android:padding="@dimen/_15sdp"
        android:text="CREATE ACCOUNT"
        android:shadowRadius="@integer/button_pressed_animation_delay"
        app:neumorph_shapeType="flat"
        android:textAlignment="center"
        android:textSize="20sp"
        android:outlineAmbientShadowColor="#000000"
        app:neumorph_inset="12dp"
        app:neumorph_insetStart="12dp"
        app:neumorph_insetEnd="12dp"
        app:neumorph_insetTop="12dp"
        app:neumorph_insetBottom="12dp"
        android:scaleType="fitStart"
        app:neumorph_shapeAppearance="@style/CustomShapeAppearance"/>
    <soup.neumorphism.NeumorphButton
        android:layout_marginTop="@dimen/_25sdp"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        app:neumorph_shadowElevation="@dimen/_5sdp"
        android:fontFamily="@font/roboto_bold"
        android:background="#ebf2f0"
        android:padding="@dimen/_15sdp"
        android:text="AlREADY HAVE AN ACCOUNT? LOGIN"
        android:shadowRadius="@integer/button_pressed_animation_delay"
        app:neumorph_shapeType="flat"
        android:textAlignment="center"
        android:textSize="16sp"
        android:outlineAmbientShadowColor="#000000"
        app:neumorph_inset="12dp"
        app:neumorph_insetStart="12dp"
        app:neumorph_insetEnd="12dp"
        app:neumorph_insetTop="12dp"
        app:neumorph_insetBottom="12dp"
        android:scaleType="fitStart"
        app:neumorph_shapeAppearance="@style/CustomShapeAppearance"/>

